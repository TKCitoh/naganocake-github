<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
      <table>
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.last_name %> <%= @order.customer.first_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.postal_code %> <%= @order.address %> <%= @order.name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
      </table>
  </div>
  <div class="total">
    <h3>商品合計 <%= @sum %></h3>
    <h3>送料 <%= @order.shipping_cost %> %></h3>
    <h3>請求金額合計 <%= @sum + @order.shipping_cost %></h3>
  </div>
</div>