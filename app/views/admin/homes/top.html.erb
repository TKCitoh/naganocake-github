<div class=“container”>
	<h2>注文履歴一覧</h2>
	 <table class="table">
	    <thead>
	      <tr>
	        <th>購入日時</th>
	        <th>購入者</th>
	        <th>注文個数</th>
	      </tr>
	    </thead>
	    <tbody>
	    	<% @orders.each do |order| %>
	    	 <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %>
          	  <%= link_to admin_order_path(order) %></td>
          <td><%= order.customer.first_name %><% order.customer.last_name %></td>
          <td><%= order.order_detail.amount %></td>
         </tr>
        <% end %>
	    </tbody>
	   </table>
	 </h2>
</div>

