<div class="row">
 <h2>商品編集</h2>
	<div class="col-xs-5">
	    <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
     <div class="field">
       <%= image_tag @item.get_image(100,100) %>
       <%= f.file_field :image, accept: "image/*" %>
     </div>
 </div>
 <div class="col-xs-7">
     <div class="field">
       <%= f.label :name, "商品名" %>
       <%= f.text_field :name %>
     </div>
     <div class="field">
       <%= f.label :introduction, "商品説明" %>
       <%= f.text_area :introduction %>
      </div>
      <div class="field">
       <%= f.label :price, "税抜価格" %>
       <%= f.text_field :price %>
       円
      </div>
  </div>
 </div>