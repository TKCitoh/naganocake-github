<div class="row">
  <h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
	<div class="col-xs-5">
	    <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
     <div class="field">
       <%= f.label :会員ID %>
       <%= @customer.id %>
     </div>
　</div>
　<div class="col-xs-7">
     <div class="field">
       <%= f.label :氏名 %>
       <%= f.label :(姓) %>
       <%= f.text_field :first_name, autofocus: true %>
       <%= f.lebel :(名) %>
       <%= f.text_field :last_name, autofocus: true %>
     </div>
     <div class="field">
       <%= f.label :フリガナ %>
       <%= f.label :セイ %>
       <%= f.text_field :first_name_kana, autofocus: true %>
       <%= f.lebel :メイ%>
       <%= f.text_field :last_name_kana, autofocus: true %>
     </div>
     <div class="field">
       <%= f.label :郵便番号 %>
       <%= f.text_field :postal_code, autofocus: true %>
     </div>
     <div class="field">
       <%= f.label :住所 %>
       <%= f.text_field :address, autofocus: true %>
     </div>
     <div class="field">
       <%= f.label :電話番号 %>
       <%= f.text_field :telephone_number, autofocus: true %>
     </div>
     <div class="field">
       <%= f.label :メールアドレス %>
       <%= f.text_field :email, autofocus: true %>
     </div>
     <div class="field">
       <%# 会員ステータスこの後実装　%>
     </div>
     <%= f.submit "編集内容を保存する", class: "btn btn-primary"%>
     <% end %>
  </div>
</div>