<div class="container">
  <div class="item-image">
      <%= image_tag @item.get_image(100,100) %>
  </div>
  <div class="col-md-5">
      <h2><%= @item.name %></h2>
      <p><%= @item.introduction %></p>
      <h3>¥<%= @item.price %>(税込)</h3>
      <%= form_with model: CartItem.new, url: public_cart_items_path, method: :post, local: true do |f| %>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <%= f.select :amount, *[1..3] %>
      <%= f.submit "カートに入れる", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>

