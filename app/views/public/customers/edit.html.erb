<div class="row login-row">
	<div class = "body" style>
		<div class = "container">
			<h2>登録情報編集</h2>

				<%= form_with model:@item do |f| %>

				<div class="field">
  　      <%= f.label :商品画像 %>
  　      <%= f.label :（姓） %>
  　      <%= f.text_field :last_name, autofocus: true %>
  　      <%= f.label :（名） %>
  　      <%= f.text_field :first_name, autofocus: true %>
　      </div>

　      <div class="field">
  　      <%= f.label :商品名 %>
  　      <%= f.label :（セイ） %>
  　      <%= f.text_field :last_name_kana, autofocus: true %>
  　      <%= f.label :（メイ） %>
  　      <%= f.text_field :first_name_kana, autofocus: true %>
　      </div>

        <div class="field">
          <%= f.label :商品説明 %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :税抜価格 %>
          <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
        </div>

        <%= f.submit "編集内容を保存",class: "btn btn-success" %>

        <% end %>
    </div>
  </div>
</div>
